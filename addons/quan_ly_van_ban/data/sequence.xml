            <field name="padding">4</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>

        <!-- Chuỗi tự động cho luân chuyển văn bản -->
        <record id="seq_luan_chuyen_van_ban" model="ir.sequence">
            <field name="name">Luân chuyển văn bản</field>
            <field name="code">luan.chuyen.van.ban</field>
            <field name="prefix">LC-%(year)s-</field>
            <field name="padding">4</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>

        <!-- Chuỗi tự động cho loại văn bản -->
        <record id="seq_loai_van_ban" model="ir.sequence">
            <field name="name">Loại văn bản</field>
            <field name="code">loai_van_ban</field>
            <field name="prefix">LVB</field>
            <field name="padding">3</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>
    </data>
</odoo>
