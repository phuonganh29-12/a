<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Chuỗi tự động cho văn bản đi -->
        <record id="seq_van_ban_di" model="ir.sequence">
            <field name="name">Văn bản đi</field>
            <field name="code">van_ban_di</field>
            <field name="prefix">VBĐ-%(year)s-</field>
            <field name="padding">4</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>

        <!-- Chuỗi tự động cho văn bản đến -->
        <record id="seq_van_ban_den" model="ir.sequence">
